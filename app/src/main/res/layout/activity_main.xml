<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
    android:background="#ff183d75">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Irkutsk"
        android:id="@+id/cityTextView"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/temperatureTextView"
        android:layout_alignStart="@+id/temperatureTextView"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherImage"
        android:layout_marginTop="100dp"
        android:contentDescription=""
        android:src="@drawable/na"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:minHeight="150dp"
        android:minWidth="210dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-17°C"
        android:id="@+id/temperatureTextView"
        android:layout_marginTop="50dp"
        android:textSize="@android:dimen/notification_large_icon_width"
        android:layout_below="@+id/weatherImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="59dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="гроза и небольшой дождь"
        android:id="@+id/textView"
        android:layout_below="@+id/temperatureTextView"
        android:layout_alignLeft="@+id/temperatureTextView"
        android:layout_alignStart="@+id/temperatureTextView"
        android:textColor="#ffffff"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/windImage"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="20dp"
        android:src="@drawable/wind"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="СЗ 4м/с"
        android:id="@+id/windTextView"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignTop="@+id/windImage"
        android:layout_toRightOf="@+id/windImage"
        android:layout_toEndOf="@+id/windImage"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView"
        android:src="@drawable/gear"
        android:layout_alignTop="@+id/cityTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"/>

</RelativeLayout>