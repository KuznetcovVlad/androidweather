<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="domain.androidweather.SettingsActivity">

    <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Show info"
            android:id = "@+id/btnInfo"
            android:layout_alignParentRight="true"
            />
    <TextView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id = "@+id/test"
        android:textSize="80dip"
        android:textColor="#EEE3C4"
        android:layout_alignTop="@+id/imageView"
        android:layout_toLeftOf="@+id/test2"
        android:layout_toStartOf="@+id/test2" />
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/pogoda_01"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/btnInfo"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_toEndOf="@+id/imageView1" />
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/pogoda_01"
        android:id="@+id/imageView1"
        android:layout_margin="0px"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/test" />
    <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id = "@+id/test1"
        android:textSize="50dip"
        android:textColor="#EEE3C4"
        android:layout_alignTop="@+id/imageView1"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/pogoda_01"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/test2"
        android:layout_alignLeft="@+id/btnInfo"
        android:layout_alignStart="@+id/btnInfo" />
    <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id = "@+id/test2"
        android:textSize="50dip"
        android:textColor="#EEE3C4"
        android:layout_alignTop="@+id/test1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>